{
	"manifest_version": 3,
	"name": "Synthical",
	"version": "2.1",
	"content_scripts": [
		{
			"matches": [
				"*://arxiv.org/*",
				"*://browse.arxiv.org/*",
				"*://www.biorxiv.org/*",
				"*://www.medrxiv.org/*",
				"*://chemrxiv.org/*",
				"*://huggingface.co/papers/*"
			],
			"js": [
				"shared/config.js",
				"scripts/content.js"
			],
			"type": "module"
		}
	],
	"permissions": [
		"storage",
		"webNavigation"
	],
	"host_permissions": [
		"*://arxiv.org/*",
		"*://browse.arxiv.org/*",
		"*://www.biorxiv.org/*",
		"*://www.medrxiv.org/*",
		"*://biorxiv.org/*",
		"*://medrxiv.org/*",
		"*://chemrxiv.org/*",
		"*://huggingface.co/papers/*"
	],
	"action": {
		"default_popup": "popup/popup.html"
	},
	"background": {
		"service_worker": "scripts/background.js",
		"type": "module"
	},
	"icons": {
		"128": "icon.png"
	}
}